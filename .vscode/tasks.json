{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cargo",
			"command": "clippy",
			"problemMatcher": [
				"$rustc"
			],
			"group": "build",
			"label": "[rust] Cargo clippy"
		},
		{
			"type": "cargo",
			"command": "clean",
			"problemMatcher": [
				"$rustc"
			],
			"label": "[rust] Cargo clean"
		},
		{
			"label": "[Subalfred] Install",
			"type": "shell",
			"command": "cargo install subalfred --version 0.9.0-rc20",
			"problemMatcher": []
		},
		{
			"label": "[Subalfred] Check Runtime",
			"type": "shell",
			"command": "subalfred check runtime",
			"problemMatcher": []
		},
		{
			"label": "[Subalfred] Check Features",
			"type": "shell",
			"command": "subalfred check features",
			"problemMatcher": []
		},
		{
			"label": "[Subalfred] Convert",
			"type": "shell",
			"command": "subalfred convert ${input:conversionType} ${input:conversion}",
			"problemMatcher": []
		},
		{
			"label": "[Subalfred] Hash",
			"type": "shell",
			"command": "subalfred hash --hasher ${input:hasher} ${input:toHash}",
			"problemMatcher": []
		},
		{
			"label": "[Subalfred] Key",
			"type": "shell",
			"command": "subalfred key --show-prefix --list-all --type ${input:keyType} ${input:toKey}",
			"problemMatcher": []
		},
		{
			"label": "[Subalfred] Upgrade",
			"type": "shell",
			"command": "subalfred workspace update-deps --targets cumulus,polkadot,substrate ${input:version}",
			"problemMatcher": []
		}
	],
	"inputs": [
		{
			"type": "pickString",
			"id": "conversionType",
			"description": "What do you want to convert?",
			"options": [
				"ascii2hex",
				"bytes2hex",
				"hex2bytes",
			],
			"default": "ascii2hex"
		},
		{
			"type": "promptString",
			"id": "conversion",
			"description": "Enter your conversion string",
			"default": "t3rn"
		},
		{
			"type": "pickString",
			"id": "hasher",
			"description": "What hasher would you like to use?",
			"options": [
				"blake2-128",
				"blake2-128-concat",
				"blake2-256",
				"blake2-512",
				"twox64",
				"twox64-concat",
				"twox128",
				"twox256",
				"keccak256",
				"keccak512",
				"sha2-256"
			],
			"default": "blake2-128-concat"
		},
		{
			"type": "promptString",
			"id": "toHash",
			"description": "Enter the hex you want to hash",
			"default": "t3rn"
		},
		{
			"type": "pickString",
			"id": "keyType",
			"description": "What key could you like to check?",
			"options": [
				"pallet",
				"parachain",
				"sibling",
			],
			"default": "parachain"
		},
		{
			"type": "promptString",
			"id": "toKey",
			"description": "Enter the key you would like to calculate",
			"default": "2000"
		},
		{
			"type": "promptString",
			"id": "version",
			"description": "Enter the version you want to use to upgrade",
			"default": "0.9.27"
		}
	]
}