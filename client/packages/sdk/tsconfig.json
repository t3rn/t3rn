{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "moduleResolution": "Node",
    "module": "commonjs",
    "target": "es2018",
    "sourceMap": true,
    "lib": ["es6", "es2018", "es2020.bigint", "dom"],
    "esModuleInterop": true,
    "alwaysStrict": false,
    "strictNullChecks": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noImplicitThis": false,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "declaration": true
  },
  "references": [],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "*.d.ts", "**/*test.ts"]
}
