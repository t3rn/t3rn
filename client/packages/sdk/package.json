{
  "name": "@t3rn/sdk",
  "version": "0.1.5",
  "description": "t3rn's client side SDK",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/t3rn/t3rn",
    "directory": "client/packages/sdk"
  },
  "author": "t3rn <team@t3rn.io>",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "scripts": {
    "ci": "rm -rf node_modules && rm yarn.lock && yarn",
    "clean:build": "rm -rf ./dist",
    "build": "yarn clean:build && tsup && yarn build:typings",
    "build:typings": "tsc --emitDeclarationOnly --outDir ./typings && rm -rf types && mv ./typings/src ./types && rm -rf typings && yarn build:typings:merge",
    "build:typings:merge": "cp -R ./types/ ./dist && rm -rf ./types",
    "build:docs": "typedoc --out docs src/ && cp -R docs ../../../docs/ts-sdk"
  },
  "keywords": [
    "t3rn",
    "interoperability",
    "polkadot",
    "cross-chain",
    "parachain",
    "types"
  ],
  "bugs": {
    "url": "https://github.com/t3rn/t3rn/issues",
    "email": "team@t3rn.io"
  },
  "homepage": "https://github.com/t3rn/t3rn",
  "dependencies": {
    "@polkadot/api": "^8.9.1",
    "dotenv": "^16.0.3"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "devDependencies": {
    "typedoc": "^0.23.21",
    "typescript": "^4.9.4"
  }
}
