{
  "compilerOptions": {
    "types": ["node", "jest"],
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "moduleResolution": "Node",
    "module": "CommonJS",
    "target": "ES2018",
    "sourceMap": true,
    "lib": [
      "esnext", "es5", "es6"
    ],
    "esModuleInterop": true,
    "alwaysStrict": false,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
  },
  "typedocOptions": {
    "entryPoints": ["src/index.ts"],
    "out": "docs"
  },
  "exclude": ["node_modules", "dist", "*.d.ts"],
}