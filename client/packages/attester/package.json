{
  "name": "attester",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "preinstall": "npm exec -- only-allow pnpm",
    "build-docs": "pnpm typedoc && cp -R docs ../../../docs/attester",
    "fmt": "prettier --check src config tests",
    "fmt:fix": "prettier --write src config tests",
    "lint": "eslint --ext .ts src --fix",
    "lint:report": "eslint --ext .ts src --output-file eslint_report.json --format json",
    "test": "LOG_LEVEL=silent jest --verbose --no-warnings",
    "test:watch": "LOG_LEVEL=silent jest --watch --no-warnings",
    "start": "ts-node src/index.ts"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ]
  },
  "dependencies": {
    "@polkadot/util": "^10.4.2",
    "@t3rn/sdk": "^0.2.2",
    "@t3rn/types": "^0.1.8",
    "async": "^3.2.4",
    "axios": "^1.4.0",
    "dotenv": "^16.3.1",
    "ethereumjs-util": "^7.1.5",
    "ethers": "^6.6.4",
    "http": "0.0.1-security",
    "pino": "^8.14.1",
    "prom-client": "^14.2.0",
    "typescript": "^5.1.6",
    "url": "^0.11.1"
  },
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-typescript": "^7.22.5",
    "@types/jest": "^29.5.3",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.4.2",
    "@typescript-eslint/eslint-plugin": "^5.62.0",
    "@typescript-eslint/parser": "^5.62.0",
    "babel-jest": "^29.6.1",
    "chai": "^4.3.7",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-jest": "^27.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.6.1",
    "pino-pretty": "^10.0.1",
    "prettier": "^2.8.8",
    "ts-mockito": "^2.6.1",
    "typedoc": "^0.24.8"
  }
}
