{
  "name": "@t3rn/types",
  "version": "0.1.5",
  "author": "t3rn <team@t3rn.io>",
  "license": "Apache-2.0",
  "description": "t3rn protocol's type definitions for use with polkadot.js clients",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "import": "./dist/index.mjs",
      "default": "./dist/index.mjs"
    }
  },
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "prepublishOnly": "npm run clean && npm run build",
    "prepack": "npm run clean && npm run build",
    "compile": "npm run compile:code && npm run compile:typings",
    "compile:code": "tsup",
    "compile:typings": "tsc ",
    "clean": "git clean -xdf -e node_modules",
    "build": "npm run generate:all && npm run compile",
    "lint": "eslint ./ --ext .ts",
    "format": "prettier ./ --write",
    "checks": "npm run build && madge --circular ./ && prettier ./ --check && npm run lint",
    "load:meta": "curl -s -H \"Content-Type: application/json\" -d '{\"id\":\"1\", \"jsonrpc\":\"2.0\", \"method\": \"state_getMetadata\", \"params\":[]}' http://127.0.0.1:9933 > metadata-t3rn.json",
    "generate:interfaces": "ts-node node_modules/.bin/polkadot-types-from-defs --package . --input ./src/augment --endpoint metadata-t3rn.json  && rm ./src/augment/index.ts ./src/augment/types.ts",
    "generate:meta": "ts-node node_modules/.bin/polkadot-types-from-chain --package . --endpoint metadata-t3rn.json --output ./src/augment --strict",
    "generate:all": "npm run generate:interfaces && npm run generate:meta"
  },
  "dependencies": {
    "@polkadot/api": "8.9.1",
    "@polkadot/keyring": "9.5.1",
    "@polkadot/types": "8.9.1",
    "@types/lodash": "^4.14.157",
    "@types/vfile": "^4.0.0",
    "ajv": "^6.11.0",
    "lodash": "^4.17.15",
    "moment": "^2.24.0"
  },
  "devDependencies": {
    "@polkadot/typegen": "8.9.1",
    "madge": "^4.0.1",
    "ts-node": "^10.2.1",
    "tsup": "6.6.3",
    "typescript": "4.4.3"
  },
  "engines": {
    "node": ">=14.0.0",
    "yarn": "^1.22.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/t3rn/t3rn",
    "directory": "client/packages/types"
  },
  "keywords": [
    "t3rn",
    "interoperability",
    "polkadot",
    "cross-chain",
    "parachain",
    "types"
  ],
  "homepage": "https://github.com/t3rn/t3rn",
  "volta": {
    "node": "14.16.1",
    "yarn": "1.22.15"
  }
}
