{
  "name": "executor",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "preinstall": "npm exec -- only-allow pnpm",
    "start": "yarn build && node dist/main.js",
    "dev": "ts-node src/main.ts",
    "build": "tsup",
    "build:pkg": "rollup -c --bundleConfigAsCjs && pkg ./bin/main.js --out-path ./bin --targets node16-macos-arm64,node16-macos-x64,node16-win-arm64,node16-win-x64,node16-linux-arm64,node16-linux-x64",
    "lint": "eslint --ext .ts src",
    "lint:report": "eslint src --ext .ts --output-file eslint_report.json --format json",
    "export": "LOG_LEVEL=debug pnpm run start >> logger.log",
    "fmt": "prettier --write src config tests",
    "fmt:check": "prettier --check src config tests",
    "build-docs": "npx typedoc && cp -R docs ../../../docs/executor",
    "test": "DOTENV_CONFIG_PATH=.env-tests mocha -r ts-node/register 'tests/**/*.ts' --require dotenv/config",
    "test:attestion": "mocha -r ts-node/register 'tests/**/attest*.ts'",
    "test-single": "yarn build && mocha -r ts-node/register"
  },
  "exclude": [
    "./tests/"
  ],
  "include": [
    "node_modules"
  ],
  "dependencies": {
    "@polkadot/api": "^10.10.1",
    "@polkadot/api-augment": "^10.10.1",
    "@polkadot/keyring": "^12.5.1",
    "@polkadot/types": "^10.10.1",
    "@polkadot/util": "^12.5.1",
    "@polkadot/util-crypto": "^12.5.1",
    "@polkadot/wasm-crypto-init": "^7.2.2",
    "@polkadot/x-fetch": "^12.5.1",
    "@polkadot/x-randomvalues": "^12.5.1",
    "@polkadot/x-textdecoder": "^12.5.1",
    "@polkadot/x-textencoder": "^12.5.1",
    "@polkadot/x-ws": "^12.5.1",
    "@t3rn/sdk": "0.4.0",
    "@t3rn/types": "^0.1.11",
    "@types/chai": "^4.3.6",
    "@types/chai-as-promised": "^7.1.6",
    "@types/debug": "^4.1.9",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.8.0",
    "axios": "^1.6.0",
    "chai": "^4.3.8",
    "chai-as-promised": "^7.1.1",
    "debug": "4.3.4",
    "dotenv": "16.3.1",
    "ethereum-cryptography": "^2.1.2",
    "ethereumjs-abi": "^0.6.8",
    "ethereumjs-util": "^7.1.5",
    "ethers": "^6.8.0",
    "mocha": "^10.2.0",
    "node-gyp": "^9.4.0",
    "pino": "^8.16.0",
    "pino-pretty": "^10.2.0",
    "pkg": "^5.8.1",
    "prettier": "^3.0.3",
    "prom-client": "^14.2.0",
    "rollup": "^4.2.0",
    "rxjs": "^7.8.1",
    "sinon": "^16.1.0",
    "standard": "^17.1.0",
    "ts-mockito": "^2.6.1",
    "types": "link:@polkadot/keyring/types",
    "web3": "^4.2.0"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.23.0",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.0.1",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@types/bn.js": "^5.1.2",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "eslint": "^8.52.0",
    "mocha-chai-jest-snapshot": "^1.1.4",
    "ts-node": "^10.9.1",
    "tsup": "^7.2.0",
    "typedoc": "^0.25.1",
    "typescript": "5.2.2"
  }
}
