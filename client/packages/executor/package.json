{
  "name": "executor",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build-docs": "npx typedoc && cp -R docs ../../../docs/executor",
    "ci": "rm -rf node_modules && rm yarn.lock && yarn",
    "dev": "LOG_LEVEL=debug ts-node src/index.ts | npx pino-pretty -c -S",
    "export": "LOG_LEVEL=debug yarn start >> logger.log",
    "fmt": "npx prettier --no-semi --tab-width 4 --print-width 140 --write config/*.ts src/*.ts src/**/*.ts src/**/**/*.ts",
    "lint": "eslint . --ext .ts",
    "lint:report": "eslint . --ext .ts --output-file eslint_report.json --format json",
    "start": "ts-node src/index.ts | npx pino-pretty -c -S",
    "test": "mocha -r ts-node/register 'tests/**/*.ts'",
    "test-single": "mocha -r ts-node/register"
  },
  "exclude": [
    "./tests/"
  ],
  "dependencies": {
    "@polkadot/api": "^10.7.1",
    "@polkadot/types": "^8.9.1",
    "@t3rn/sdk": "../sdk",
    "@t3rn/types": "../types",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.2.1",
    "axios": "^1.4.0",
    "bn.js": "^5.2.1",
    "chai": "^4.3.7",
    "debug": "4.3.4",
    "dotenv": "16.0.3",
    "mocha": "^10.2.0",
    "pino": "^8.11.0",
    "pino-pretty": "^10.0.0",
    "rxjs": "^7.5.7",
    "standard": "^17.0.0",
    "ts-mockito": "^2.6.1",
    "ts-node": "^10.9.1",
    "typedoc": "^0.24.7",
    "typescript": "^4.8.4"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.59.6",
    "@typescript-eslint/parser": "^5.59.5",
    "eslint": "^8.41.0"
  }
}
