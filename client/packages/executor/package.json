{
  "name": "executor",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "preinstall": "npm exec -- only-allow pnpm",
    "start": "yarn build && EXECUTOR=example node dist/main.js",
    "dev": "ts-node src/main.ts",
    "build": "tsup",
    "lint": "eslint --ext .ts src",
    "lint:report": "eslint src --ext .ts --output-file eslint_report.json --format json",
    "export": "LOG_LEVEL=debug pnpm run start >> logger.log",
    "fmt": "prettier --write src config tests",
    "fmt:check": "prettier --check src config tests",
    "build-docs": "npx typedoc && cp -R docs ../../../docs/executor",
    "test": "mocha -r ts-node/register 'tests/**/*.ts'",
    "test:attestion": "mocha -r ts-node/register 'tests/**/attest*.ts'",
    "test-single": "yarn build && mocha -r ts-node/register"
  },
  "exclude": [
    "./tests/"
  ],
  "dependencies": {
    "@polkadot/api": "^10.9.1",
    "@polkadot/api-augment": "^10.9.1",
    "@polkadot/keyring": "^12.4.1",
    "@polkadot/types": "^10.9.1",
    "@polkadot/util": "^12.4.1",
    "@polkadot/util-crypto": "^12.4.1",
    "@t3rn/sdk": "link:../sdk",
    "@t3rn/types": "link:../types",
    "@types/chai": "^4.3.5",
    "@types/chai-as-promised": "^7.1.5",
    "@types/debug": "^4.1.8",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.5.2",
    "axios": "^1.4.0",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "debug": "4.3.4",
    "dotenv": "16.3.1",
    "ethereum-cryptography": "^2.1.2",
    "ethereumjs-abi": "^0.6.8",
    "ethereumjs-util": "^7.1.5",
    "ethers": "^6.7.1",
    "mocha": "^10.2.0",
    "node-gyp": "^9.4.0",
    "pino": "^8.15.0",
    "pino-pretty": "^10.2.0",
    "prettier": "^3.0.2",
    "prom-client": "^14.2.0",
    "rxjs": "^7.8.1",
    "sinon": "^15.2.0",
    "standard": "^17.1.0",
    "ts-mockito": "^2.6.1",
    "types": "link:@polkadot/keyring/types",
    "web3": "^4.1.1"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.22.5",
    "@types/bn.js": "^5.1.1",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "mocha-chai-jest-snapshot": "^1.1.4",
    "ts-node": "^10.9.1",
    "tsup": "^7.2.0",
    "typedoc": "^0.24.8",
    "typescript": "5.1.6"
  }
}
